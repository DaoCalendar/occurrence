<!--
  Run this with:
   oozie job -oozie http://c1n1.gbif.org:11000/oozie/ -config example-jobs/execute-download.xml -run
-->
<configuration>
  <!-- See the install-workflow.sh which declares this location during development -->
  <property>
    <name>oozie.wf.application.path</name>
    <value>hdfs://c1n1.gbif.org:8020/occurrence-download-workflows-dev_downloads/simple-download</value>
  </property>

  <!--
    During development we overwrite defaults with our own values (!)
  -->
  <property>
    <name>user.name</name>
    <value>oozie</value>
  </property>
  <property>
    <name>hiveDB</name>
    <value>dev_downloads</value>
  </property>
  <property>
    <name>occurrenceTable</name>
    <value>fmendez_occurrence</value>
  </property>
  <property>
    <name>downloadFormat</name>
    <value>SIMPLE_CSV</value>
  </property>
  <property>
    <name>gbif_filter</name>
    <value>{"type":"equals","key":"YEAR","value":"2000"}</value>
  </property>

  <property>
    <name>oozie.libpath</name>
    <value>/occurrence-download-workflows-dev_downloads/lib/</value>
  </property>
  <property>
    <name>oozie.use.system.libpath</name>
    <value>true</value>
  </property>
  <property>
    <name>mapreduce.job.user.classpath.first</name>
    <value>true</value>
  </property>

</configuration>

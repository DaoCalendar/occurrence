<workflow-app name="${occurrence.environment}-create-tables" xmlns="uri:oozie:workflow:0.4.5">

  <global>
    <job-tracker>${hadoop.jobtracker}</job-tracker>
    <name-node>${hdfs.namenode}</name-node>
    <configuration>
      <property>
        <name>oozie.launcher.mapreduce.task.classpath.user.precedence</name>
        <value>true</value>
      </property>
      <property>
        <name>oozie.launcher.mapreduce.user.classpath.first</name>
        <value>true</value>
      </property>
    </configuration>
  </global>

  <start to="create-snapshot"/>

  <action name="create-snapshot">
    <java>
      <main-class>org.gbif.occurrence.download.oozie.HdfsSnapshotAction</main-class>
      <arg>START</arg>
      <arg>hdfs://ha-nn/data/hdfsview/occurrence/</arg>
      <arg>${wf:id()}</arg>
    </java>
    <ok to="create-avro-table"/>
    <error to="notify-error"/>
  </action>

  <!--
    Create the table backed by HBase
  -->
  <action name="create-avro-table">
    <hive xmlns="uri:oozie:hive-action:0.4">
      <job-xml>conf/hive-default.xml</job-xml>
      <script>hive-scripts/create-occurrence-avro.q</script>
      <param>hiveDB=${hiveDB}</param>
      <param>env=${occurrence.environment}</param>
      <param>snapshot=${wf:id()}</param>
    </hive>
    <ok to="delete-snapshot"/>
    <error to="delete-snapshot-error"/>
  </action>

  <action name="delete-snapshot">
    <java>
      <main-class>org.gbif.occurrence.download.oozie.HdfsSnapshotAction</main-class>
      <arg>END</arg>
      <arg>hdfs://ha-nn/data/hdfsview/occurrence/</arg>
      <arg>${wf:id()}</arg>
    </java>
    <ok to="end"/>
    <error to="notify-error"/>
  </action>

  <action name="delete-snapshot-error">
    <java>
      <main-class>org.gbif.occurrence.download.oozie.HdfsSnapshotAction</main-class>
      <arg>END</arg>
      <arg>hdfs://ha-nn/data/hdfsview/occurrence/</arg>
      <arg>${wf:id()}</arg>
    </java>
    <ok to="notify-error"/>
    <error to="notify-error"/>
  </action>

  <action name="notify-error">
    <email xmlns="uri:oozie:email-action:0.2">
      <to>informatics@gbif.org</to>
      <subject>Occurrence HDFS Build failed  ${wf:id()}</subject>
      <body>The wf ${wf:id()} failed with error: [${wf:errorMessage(wf:lastErrorNode())}]</body>
    </email>
    <ok to="kill"/>
    <error to="kill"/>
  </action>

  <kill name="kill">
    <message>Failed to create tables for occurrence downloads:[${wf:errorMessage(wf:lastErrorNode())}]</message>
  </kill>

  <end name="end"/>

</workflow-app>

<?xml version="1.0" encoding="utf-8"?>
<workflow-app name="${occurrence.environment}-bloodhound-occurrence-download" xmlns="uri:oozie:workflow:0.4.5">

  <global>
    <job-tracker>${hadoop.jobtracker}</job-tracker>
    <name-node>${hdfs.namenode}</name-node>
    <configuration>
      <property>
        <name>oozie.launcher.mapreduce.task.classpath.user.precedence</name>
        <value>true</value>
      </property>
      <property>
        <name>mapred.job.queue.name</name>
        <value>download-admin</value>
      </property>
    </configuration>
  </global>

  <start to="from_hive_download"/>

  <!-- Execute the query using sequential approach -->
  <action name="from_hive_download">
    <hive xmlns="uri:oozie:hive-action:0.4">
      <job-xml>conf/hive-default.xml</job-xml>
      <configuration>
        <property>
          <name>mapred.job.queue.name</name>
          <value>download-admin</value>
        </property>
      </configuration>
      <script>hive-scripts/execute-bloodhound-query.q</script>
      <param>hiveDB=${hive_db}</param>
      <param>occurrenceTable=${download_table_name}</param>
      <param>whereClause=${hive_query}</param>
    </hive>
    <ok to="archive_table"/>
    <error to="drop_tables_failure"/>
  </action>

  <action name="archive_table">
    <java>
      <main-class>org.gbif.occurrence.download.file.archive.MultiFileArchiveBuilder</main-class>
      <arg>${occurrence.download.hdfsOutputPath}</arg>
      <arg>${download_key}</arg>
      <arg>PRE_DEFLATED</arg>

      <arg>/user/hive/warehouse/${hive_db}.db/${download_table_name}/</arg>
      <arg>${download_key}.tsv</arg>
      <arg>gbifID&#x9;datasetKey&#x9;license&#x9;countryCode&#x9;dateIdentified&#x9;eventDate&#x9;hasImage&#x9;v_occurrenceID&#x9;v_dateIdentified&#x9;v_decimalLatitude&#x9;v_decimalLongitude&#x9;v_country&#x9;v_eventDate&#x9;v_year&#x9;v_family&#x9;v_identifiedBy&#x9;v_institutionCode&#x9;v_collectionCode&#x9;v_catalogNumber&#x9;v_recordedBy&#x9;v_scientificName&#x9;v_typeStatus</arg>

      <arg>/user/hive/warehouse/${hive_db}.db/${download_table_name}_agents/</arg>
      <arg>${download_key}_agents.tsv</arg>
      <arg>agent&#x9;total_recordedBy&#x9;total_identifiedBy&#x9;gbifIDs_recordedBy&#x9;gbifIDs_identifiedBy</arg>

      <arg>/user/hive/warehouse/${hive_db}.db/${download_table_name}_families/</arg>
      <arg>${download_key}_families.tsv</arg>
      <arg>v_family&#x9;total&#x9;gbifIDs_family</arg>
      <capture-output/>
    </java>

    <ok to="persist_usages"/>
    <error to="kill"/><!--TODO-->
  </action>

  <action name="persist_usages">
    <java>
      <main-class>org.gbif.occurrence.download.citations.CitationsPersister</main-class>
      <arg>/user/hive/warehouse/${hive_db}.db/${download_table_name}_citation/</arg>
      <arg>${download_key}</arg>
      <capture-output/>
    </java>

    <ok to="drop_tables"/>
    <error to="drop_tables_failure"/>
  </action>

  <action name="drop_tables">
    <hive xmlns="uri:oozie:hive-action:0.4">
      <job-xml>conf/hive-default.xml</job-xml>
      <configuration>
        <property>
          <name>mapred.job.queue.name</name>
          <value>download-admin</value>
        </property>
      </configuration>
      <script>hive-scripts/drop_tables.q</script>
      <param>occurrenceTable=${download_table_name}</param>
      <param>hiveDB=${hive_db}</param>
    </hive>

    <ok to="end"/>
    <error to="kill"/>
  </action>

  <action name="drop_tables_failure">
    <hive xmlns="uri:oozie:hive-action:0.4">
      <job-xml>conf/hive-default.xml</job-xml>
      <configuration>
        <property>
          <name>mapred.job.queue.name</name>
          <value>download-admin</value>
        </property>
      </configuration>
      <script>hive-scripts/drop_tables.q</script>
      <param>occurrenceTable=${download_table_name}</param>
      <param>hiveDB=${hive_db}</param>
    </hive>

    <ok to="kill"/>
    <error to="kill"/>
  </action>

  <kill name="kill">
    <message>Occurrence download failed:[${wf:errorMessage(wf:lastErrorNode())}]</message>
  </kill>

  <end name="end"/>

</workflow-app>
